{% extends 'base.html.twig' %}

{% block title %} Votre liste de choix de TER {% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Liste de vos Ters {{ nom  }}</h1>

        <ul class="etu_ters">
            {% if ters %}
                {% for ter in ters %}
                    <li>
                        <a class="linktest" href="{{ path('app_terId',{id : ter.id })}}">
                            <span class="tername">{{ ter.nomsujet}}</span>
                            <a/>

                    </li>
                {% endfor %}
            {% else %}
                    <p>
                        Vous n'avez aucun choix de Ter
                    </p>
            {% endif %}
        </ul>

    </div>
{% endblock %}
