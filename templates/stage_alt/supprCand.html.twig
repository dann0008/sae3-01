{% block stylesheets %}
    <!-- Ajoutez l'importation de Bootstrap ici -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-5 " style="color: #003399" >
            Présentation du Stage/Alternance
        </h1>

        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <dl class="row" >
            <dt class="col-sm-2 font-weight-bold " style="color: #003399">Nom du sujet</dt>
            <dd class="col-sm-10">{{ staAlt.nom }}</dd>
            <dt class="col-sm-2 font-weight-bold" style="color: #003399">Entreprise du stage</dt>
            <dd class="col-sm-10">{{ staAlt.entreprise }} </dd>
            <dt class="col-sm-2 font-weight-bold" style="color: #003399" >Description</dt>
            <dd class="col-sm-10">{{ staAlt.description }}</dd>
            <dt class="col-sm-2 font-weight-bold" style="color: #003399">Dates du stage</dt>
            <dd class="col-sm-10">{{ staAlt.dateDebut |date("d/m/Y") }} {{ staAlt.dateFin |date("d/m/Y") }} </dd>
        </dl>

        <div class="text-center mt-5">

            {% if staAlt in user.candidatures %}
                <a href="{{ path('app_stage_alt_delCandidature', {'id': staAlt.id}) }}" class="btn btn-primary mr-3">
                    Supprimer le Stage/Alternance à vos liste candidatures
                </a>
                <button type="button" class="btn btn-secondary close-btn">Fermer</button>

            {% else %}
                <div class="alert alert-danger font-weight-bold text-uppercase">
                    Vous n'êtes pas candidat à ce stage !
                </div>
                <button type="button" class="btn btn-secondary close-btn">Fermer</button>

            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <!-- Ajoutez l'importation de popper.js et de Bootstrap ici -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
{% endblock %}