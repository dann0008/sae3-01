{% extends 'base.html.twig' %}

{% block title %} {{"Édition de #{stageAlt.nom}"}} {% endblock %}

{% block body %}

    <style>
        @import url(https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900);

        body {
            background: #6768bd;
        }

        h1 {
            color: #ffffff;
            padding-top: 40px;
            font-size: 30px;
            text-transform: uppercase;
            font-weight: 700;
            text-align: center;
        }
        .terForm{
            margin:auto;
            width: 70%;
            margin-left: auto;
            margin-right: auto;
            border-radius:8px;
        }

        #btn{
            border-color: white;
            background-color: white;
            border-radius: 10px;
            width: 12%;
            min-width: 100px;
        }


        #btn:hover{
            border-color: greenyellow;
            background-color:greenyellow;
            border-radius: 10px;
        }

    </style>


    <h1> {{"Édition de #{stageAlt.nom}"}} </h1>
<div class="terForm">
{{ form_start(form) }}
        {{ form_widget(form) }}
        <button id="btn">{{ button_label|default('Modifier') }}</button>
    {{ form_end(form) }}
</div>
{% endblock %}

