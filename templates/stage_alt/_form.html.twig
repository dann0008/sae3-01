{% extends 'base.html.twig' %}

{% block title %} Création d'un nouveau Stage/Alternance {% endblock %}

{% block body %}

    <style>
        @import url(https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900);

        body {
            background: #6768bd;
        }

        h1 {
            color: #ffffff;
            padding-top: 40px;
            font-size: 30px;
            text-transform: uppercase;
            font-weight: 700;
            text-align: center;
        }
        .terForm{
            margin:auto;
            width: 70%;
            margin-left: auto;
            margin-right: auto;
            border-radius:8px;
        }

        #btn{
            border-color: white;
            background-color: white;
            border-radius: 10px;
            width: 12%;
            min-width: 6%;
        }


        #btn:hover{
            border-color: #ee9b00;
            background-color:#ee9b00;
            border-radius: 10px;
        }

    </style>


    <h1> Création d'un Stage/Alternance </h1>
<div class="terForm">
    {{ form_start(form) }}
    {{ form_row(form, { 'label': 'A compléter' }) }}<br>
        <button id="btn">{{ button_label|default('Creer') }}</button>
    {{ form_end(form) }}
</div>
{% endblock %}

